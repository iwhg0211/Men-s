<div class="row justify-content-center">
 <h3 class="p-3 mb-2 bg-warning text-dark"><%= @review.user.user_name %>の<%= @review.post.shop_name %>のレビュー編集</h3>
</div>

<div class="row justify-content-center">
 <p class="p-3 mb-2 bg-warning text-dark">星の数</p>
 <div class="p-3 mb-2 bg-dark text-white">
  <%= @review.rate %>
 </div>
</div>
 
<div class="row justify-content-center">
 <p class="p-3 mb-2 bg-warning text-dark">レビュータイトル</p>
 <div class="p-3 mb-2 bg-dark text-white">
  <%= @review.review_title %>
 </div>
</div>
 
<div class="row justify-content-center">
 <p class="p-3 mb-2 bg-warning text-dark">レビュー本文</p>
 <div class="p-3 mb-2 bg-dark text-white">
  <%= @review.shop_review %>
 </div>
</div>
 
