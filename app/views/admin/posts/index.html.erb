<div class="container">

  <div class="row justify-content-center">
    <h3 class="p-3 mb-2 bg-warning text-dark">投稿一覧</h3>
  </div>

  <div class="row justify-content-center">
    <table class='table-dark table-bordered table-hover' width="100%" height="300">
      <thead>
        <tr>
          <th>投稿id</th>
          <th>ユーザー名</th>
          <th>店名</th>
          <th>店の説明</th>
          <th>公開・非公開</th>
        </tr>
      </thead>
      <% @posts.each do |post| %>
      <tbody>
      <%# if post.user.is_deleted == false %>
        <tr>
          <td><%= link_to "#{post.id}", admin_post_path(post.id), class:'btn btn-warning' %></td>
          <%# ↑の#{post}の#{}は文字列の中に変数を入れることができるもの %>
          <td><%= post.user.user_name %></td>
          <td><%= post.shop_name %></td>
          <td><%= post.shop_explanation %></td>
          <td><%= post.is_released %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>

<button type="button" class="btn btn-warning">
  <%= paginate @posts %>
</button>

</div>