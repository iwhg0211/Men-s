<div class="container">

  <div class="row justify-content-md-center">
    <div class="col col-lg-auto">
      <h2 class="p-3 mb-2 bg-warning text-dark">管理者ログイン</h2>
    </div>
  </div>

  <div class="row justify-content-md-center">
    <div class="col col-lg-auto">
      <%#ここでformタグでform_withを囲んでいた。formでformを囲んでしまうと動かなくなるので注意！特にbootstrapのサンプルから持ってくるときは注意！%>
        <%= form_with model: @admin, url: admin_session_path do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレスを入力" %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "current-password", :placeholder => "パスワードを入力" %>
          </div>

          <%# if devise_mapping.rememberable? %>
            <%#<div class="field">
              <%#= f.check_box :remember_me %>
              <%#= f.label :remember_me %>
            <%#</div>
          <%# end %>

          <div class="actions">
            <%= f.submit "ログイン", class:"btn btn-primary" %>
          </div>

        <% end %>

        <%= render "admin/shared/links" %>

    </div>
  </div>

</div>