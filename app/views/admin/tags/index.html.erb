<div class="row justify-content-center">
  <h3 class="p-3 mb-2 bg-warning text-dark">タグ一覧</h3>
</div>

<div class="row justify-content-center">
  <table class='table-dark table-bordered table-hover' width="90%" height="20">
    <thead>
      <tr>
        <th>タグid</th>
        <th>タグ名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @tag_lists.each do |tag| %>
      <tr>
        <td><%= tag.id %></td>
        <td><%= tag.tag_name %></td>
        <td><%= link_to '編集', edit_admin_tag_path(tag.id), class:'btn btn-success' %>
            <%= link_to '削除', admin_tag_path(tag.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:'btn btn-danger' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>