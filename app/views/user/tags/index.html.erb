<div class="row justify-content-center">
  <h3 class="p-3 mb-2 bg-warning text-dark"><%= @tag.tag_name %>のタグがついた投稿一覧</h3>
</div>

<div class="row justify-content-center">
  <table class='table-dark table-bordered table-hover' width="40%" height="70">
    <thead>
      <tr>
        <th>ユーザー名</th>
        <th>投稿名</th>
      </tr>
    </thead>
    <% @posts.each do |post| %>
    <tbody>
      <tr>
        <td><%= post.user.user_name %></td>
        <td><%= link_to post.shop_name, post_path(post.id), class:'btn btn-warning' %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>