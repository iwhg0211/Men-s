<p><%= @user.user_name %>の投稿情報詳細</p>

<% if @post.post_image.attached? %>
  <%= image_tag @post.post_image, size: "50x50" %>
<% else %>
  <%= image_tag 'men_image', size: "50x50" %>
<% end %>

<p>店名</p>
<%= @post.shop_name %>

<p>店の説明</p>
<%= @post.shop_explanation %>

<% if @user.id == current_user %>
 <%= link_to '編集', edit_post_path(@post.id) %>
<% else %>
<% end %>

<p>PV数</p>
<p><%#= @post.impressionist_count %></p>
<%#.これでPVの数を表示 %>

<table>
  <thead>
    <tr>
      <th>レビューユーザー名</th>
      <th>レビュー内容</th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <tbody>
    <tr>
      <td><%= user.user_name %></td>
      <td><%#= user.posts.review.review_title %></td><%# controllerにpostに紐付いたreviewをeach文で作る %>
    </tr>
  </tbody>
  <% end %>
</table>