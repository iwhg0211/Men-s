<h3>投稿一覧</h3>

<table>
  <thead>
    <tr>
      <th>投稿id</th>
      <th>ユーザー名</th>
      <th>店名</th>
      <th>店の説明</th>
      <th>公開・非公開</th>
    </tr>
  </thead>
  <% @posts.each do |post| %>
  <tbody>
    <tr>
      <td><%= link_to "#{post.id}", post_path(post.id) %></td>
      <%## ↑の#{post}の#{}は文字列の中に変数を入れることができるもの %>
      <td><%= post.user.user_name %></td>
      <td><%= post.shop_name %></td>
      <td><%= post.shop_explanation %></td>
      <td><%= post.is_released %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<%= paginate @posts %>

<table>
  <thead>
    <tr>
      <th>順位</th>
      <th>ユーザー名</th>
      <th>PV数</th>
    </tr>
  </thead>
  <tbody>
    <% @all_ranks.each do |post| %>
    <tr>
      <td></td>
      <td><%= post.user.user_name %></td>
      <td><%= post.impressionist_count %></td>
    </tr>
    <% end %>
  </tbody>
</tablw>


